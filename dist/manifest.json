{
  "name": "PDF annotator React",
  "version": "1.0.0",
  "description": "PDF annotator for research papers + integrate ML in the future",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://127.0.0.1/*", "https://developer.chrome.com/*"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["contentScript.css", "check.png", "tick.png"],
      "matches": ["http://127.0.0.1/*", "https://developer.chrome.com/*"]
    }
  ]
}